def read_n_lines(file_path, n):
    with open(file_path, 'r') as file:
        while True:
            lines = [file.readline() for _ in range(n)]  # Read N lines at a time
            if not any(lines):  # Check if all lines are empty (end of file)
                break
            yield lines

# Example usage:
file_path = 'data/parsed_data/summer_2_courses.md'  # Replace 'example.txt' with your file path
n = 5  # Number of lines to read at a time

for chunk in read_n_lines(file_path, n):
    for line in chunk:
        print(line.strip())  # Strip newline character and print the line
    print("---------")  